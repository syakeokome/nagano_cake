<div>
  <h3>ショッピングカート</h3>
</div>
<%= link_to "カートを空にする", public_cart_items_destroy_all_path, method: :delete %>
<table class="table table-hover table-inverse">
  <thead>
   <tr>
     <th>商品名</th>
     <th>単価(税込)</th>
     <th>数量</th>
     <th>小計</th>
     <th></th>
   </tr>
  </thead>
  <tbody>
    <% @sum = 0 %>
    <% @cart_items.each do |cart_item|%>
      <tr>
        <td>
          <%= attachment_image_tag cart_item.item, :image, :fill, 60, 60 %><%= cart_item.item.name %>
        </td>
        <td>
          <%= cart_item.item.prise %>
        </td>
        <td>
          <%= form_with model: cart_item , url: public_cart_item_path(cart_item), local: true do |f| %>
           <%= f.select :amount, *[1..3] %>
           <%= f.submit "変更" %>
          <% end %>
        </td>
        <td>
         <%= cart_item.item.prise * cart_item.amount %>
        </td>
        <% @sum += cart_item.item.prise * cart_item.amount %>
        <td>
          <%= link_to "削除する",public_cart_item_path(cart_item), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
合計金額 <%= @sum %></br>
