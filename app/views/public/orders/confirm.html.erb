<div>
  <h3>注文情報確認</h3>
</div>
<table class="table table-hover table-inverse">
  <thead>
   <tr>
     <th>商品名</th>
     <th>単価(税込)</th>
     <th>数量</th>
     <th>小計</th>
   </tr>
  </thead>
  <tbody>
    <% @sum = 0 %>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= attachment_image_tag cart_item.item, :image, :fill, 60, 60 %><%= cart_item.item.name %>
        </td>
        <td>
          <%= cart_item.item.prise %>
        </td>
        <td>
          <%= cart_item.amount %>
        </td>
        <td>
         <%= cart_item.item.prise * cart_item.amount %>
        </td>
        <% @sum += cart_item.item.prise * cart_item.amount %>
      </tr>
    <% end %>
  </tbody>
</table>
<table class="table table-hover table-inverse">
   <tr>
     <th>送料</th>
     <td>800</td>
   </tr>
   <tr>
     <th>商品合計</th>
     <td><%= @sum %></td>
    </tr>
    <tr>
     <th>請求金額</th>
     <td><%= @sum + 800 %></td>
    </tr>
</table>
<p>支払方法</p>
<%= @order.payment_method_i18n %>
<p>お届け先</p>
<% @order.postal_code %><% @order.address %><% @order.name %>
<%= form_with model: @order, url: public_orders_path, local: true do |f| %>
<%= f.hidden_field :postal_code %>
<%= f.hidden_field :address %>
<%= f.hidden_field :name %>
<%= f.hidden_field :total_payment, value: @sum %>
<%= f.hidden_field :payment_method %>
 <%= f.submit '確認画面へ進む' %>
<% end %>
