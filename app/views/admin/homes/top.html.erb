<table class="table table-inverse">
  <h1>注文履歴一覧</h1>
  <thead>
   <tr>
     <th>購入日時</th>
     <th>購入者</th>
     <th>注文個数</th>
   </tr>
  </thead>
  <tbody>
    <% @orders.each do |order|%>
      <tr>
        <td>
          <%= link_to admin_order_path(order) do %>
            <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          <% end %>
        </td>
        <td>
          <%= order.name %>
        </td>
        <% sum = 0 %>
        <% order.order_details.each do |order_detail|%>
          <% sum += order_detail.amount %>
        <% end %>
        <td>
          <%= sum %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>